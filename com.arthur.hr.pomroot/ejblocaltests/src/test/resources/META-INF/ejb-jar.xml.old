<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                            http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd"
        version="3.1">

	<enterprise-beans>
		<session>
			<ejb-name>EmployeeDAO</ejb-name>
			<business-local>ejb.interfaces.EmployeeDAOLocal</business-local>
			<business-remote>ejb.interfaces.EmployeeDAORemote</business-remote>
			<ejb-class>ejb.EmployeeDAO</ejb-class>
			<init-on-startup>true</init-on-startup>
			<transaction-type>Container</transaction-type>

			<!-- <persistence-context-ref> <persistence-context-ref-name>ejbunit</persistence-context-ref-name> 
				<persistence-unit-name>persistenceTest</persistence-unit-name> <injection-target> 
				<injection-target-class>javax.persistence.EntityManager</injection-target-class> 
				<injection-target-name>em</injection-target-name> </injection-target> </persistence-context-ref> -->
		</session>
	</enterprise-beans>
</ejb-jar>

